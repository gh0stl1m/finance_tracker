<h1>My Friends</h1>
<h3>Search For Friends</h2>
<div id="stock-lookup">
  <%= form_tag friends_search_path, remote: true, method: :get, id: "friends-lookup-form" do %>
  <div class="form-group row no-padding text-center col-md-12">
    <div class="col-md-10">
      <%= text_field_tag :search_param, params[:search_param], placeholder: "Enter name or email", autofocus: true, class: "form-control search-box input-lg" %>
    </div>
    <div class="col-md-2">
      <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
        <i class="fa fa-search"></i> Look up a friend
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div id="friends-results">
  <%= render 'friends/result' %>
</div>